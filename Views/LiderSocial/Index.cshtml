@model IEnumerable<LiderSocial>

@{
    ViewData["Title"] = "Líderes Sociales: Lista de líderes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center mt-4">Líderes disponibles</h1>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <p class="text-md-center">Listado de líderes registrados.</p>
        <a asp-action="Create" class="btn btn-sm btn-primary"><i class="bi bi-clipboard2-plus mr-2"></i> Nuevo líder</a>
    </div>

    <div class="table-responsive">
        <table class="table table-sm table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th scope="col">@Html.DisplayNameFor(model => model.Nombre)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.Barrio)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.Ciudad)</th>
                    <th scope="col" class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                        <td>@Html.DisplayFor(modelItem => item.Barrio.Nombre)</td>
                        <td>@Html.DisplayFor(modelItem => item.Ciudad.Nombre)</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.LiderSocialId" class="btn btn-sm btn-warning" title="Editar">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.LiderSocialId" class="btn btn-sm btn-info" title="Ver detalles">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.LiderSocialId" class="btn btn-sm btn-danger" title="Eliminar">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
