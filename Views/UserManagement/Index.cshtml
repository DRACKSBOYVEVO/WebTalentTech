@model IEnumerable<UserWithRolesViewModel>

@{
    ViewData["Title"] = "Gestion roles: Lista de roles disponibles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center mt-4">Lista de Usuarios</h1>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <p class="text-md-center">Listado de roles registradas.</p>
        <a asp-action="Create" class="btn btn-sm btn-primary"><i class="bi bi-clipboard2-plus mr-2"></i> Nuevo rol de usuario</a>
    </div>

    <div class="table-responsive">
        <table class="table table-sm table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th scope="col">@Html.DisplayNameFor(model => model.UserName)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.Roles)</th>
                    <th scope="col" class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.UserName</td>
                        <td>@string.Join(", ", item.Roles)</td>
                        <td class="text-center">
                            <a href="@Url.Action("EditRoles", "UserManagement", new { userId = item.UserId })" class="btn btn-primary" title="Editar">Editar Roles</a>
                            <a href="@Url.Action("DeleteRoles", "UserManagement", new { userId = item.UserId })" class="btn btn-warning" title="Eliminar">Eliminar Roles</a>
                            <a href="@Url.Action("DetailsRoles", "UserManagement", new { userId = item.UserId })" class="btn btn-info" title="Ver detalles">Detalles Roles</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>