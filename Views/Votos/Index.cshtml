@model IEnumerable<Voto>

@{
    ViewData["Title"] = "Gestionar votos: Listado de votos disponibles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center mt-4">Votos disponibles</h1>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <p class="text-md-center">Listado de votos registradas.</p>
        <a asp-action="Create" class="btn btn-sm btn-primary"><i class="bi bi-clipboard2-plus mr-2"></i> Registrar nuevo voto</a>
    </div>

    <div class="table-responsive">
        <table class="table table-sm table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th scope="col">@Html.DisplayNameFor(model => model.Encuesta)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.LiderSocial)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.FechaVoto)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.Cedula)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.ProyectoSocial.LiderSocialId)</th>
                    <th scope="col" class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Encuesta.Apellidos)</td>
                        <td>@Html.DisplayFor(modelItem => item.LiderSocial.Nombre)</td>
                        <td>@Html.DisplayFor(modelItem => item.FechaVoto)</td>
                        <td>@Html.DisplayFor(modelItem => item.Cedula)</td>
                        <td>@Html.DisplayFor(modelItem => item.ProyectoSocial.ProyectoSocialId)</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.VotoId" class="btn btn-sm btn-warning" title="Editar">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.VotoId" class="btn btn-sm btn-info" title="Ver detalles">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.VotoId" class="btn btn-sm btn-danger" title="Eliminar">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>