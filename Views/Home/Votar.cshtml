<main class="card shadow p-4" style="max-width: 400px; width: 100%;">
    <form id="vote-form">
        <h2 class="text-center mb-4">¡Vota por tu tema favorito!</h2>
        <div class="mb-3">
            <label for="topic" class="form-label">Selecciona un tema:</label>
            <select id="topic" name="topic" class="form-select" required>
                <option value="educacion">Educación</option>
                <option value="tecnologia">Tecnología</option>
                <option value="mujer">Mujer</option>
                <option value="ninez">Niñez</option>
                <option value="juventud">Juventud</option>
                <option value="arte">Arte</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary w-100">Votar</button>
    </form>
</main>